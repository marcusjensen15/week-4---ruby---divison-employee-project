<h1><%= @division.name %></h1>
<h3>Employees:</h3>
<% if @division.employees.any? %>
<% @division.employees.each do |employee| %>
<p><%=employee.employee_name%></p>
<% end %>
<% else %>
<p>No employees in this division</p>
<% end %>


<% if @division.id != 0 %>

<p><%= link_to "Edit", edit_division_path(@division) %></p>
<p><%= link_to "Delete", division_path(@division),
  :data => {:confirm => "You sure?",
  :method => "delete"} %></p>



  <% else %>
  <p>You are not allowed to edit this division</p>



  <% end %>

  <%= form_for "employee", :url => {:action => "add"} do |f| %>
  <%= f.submit "Add Employee" %>
  <%= f.select :employee, @employees %>


  <% end %>

  <p><%= link_to "Return to divisions", divisions_path %></p>
